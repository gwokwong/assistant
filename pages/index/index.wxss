/**index.wxss**/

.tui-table-view {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    height: 300rpx;
    padding-left: 40rpx;
    padding-right: 40rpx;
}

.footer {
    position: fixed;
    bottom: 10rpx;
    font-size: 10rpx;
    color: #374046;
    text-align: center;
    width: 100%;
}

.loading {
    width: 100vw;
    height: 250px;
    background-color: #374046;
    display: flex;
    justify-content: center;
    align-items: top;
}

.circle {
    margin-top: 5rpx;
    width: 100px;
    height: 100px;
    background-color: #374046;
    border: 10px solid #374046;
    border-radius: 50%;
}

.type_title{
    font-size: small;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 50rpx;
    padding-bottom: 20rpx;
}

.wave {
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    overflow: hidden;
    z-index: 0;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}

.center_txt {
    color: #374046;
    width: 100%;
    font-size: small;
}

.center_right_txt {
    color: #fff;
    font-size: small;
    margin-top: 40rpx;
}



.right_c{
    margin-left: 80rpx;
}


